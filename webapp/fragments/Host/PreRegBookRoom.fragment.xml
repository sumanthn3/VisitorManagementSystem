<core:FragmentDefinition xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m">
	<Dialog title="{i18n>bookRoom}" draggable="true" verticalScrolling="true" class="sapUiSizeCompact AddDialog" resizable="true"
		contentWidth="20rem" titleAlignment="Center">
		<content>
			<VBox>
				<f:SimpleForm layout="ColumnLayout" editable="true">
					<f:content>
						<Text text="Book Room for Meeting"></Text>
						<Label text="{i18n>selectRoom}"/>
						<Input id="idBookRoom" class="InputBox"  showSuggestion="true" showValueHelp="true" suggestionItems="{oHostModel>/AvailableRoom}">
							<suggestionItems>
								<core:Item text="{oHostModel>name} Capacity= {oHostModel>capacity}							 RoomId={oHostModel>rid}"/>
							</suggestionItems>
						</Input>
					</f:content>
				</f:SimpleForm>
				<List headerText="Required Facilities"  id="idfacilities">
					<InputListItem label="Wifi">
						<CheckBox  id="idwifi" selected="false"></CheckBox>
					</InputListItem>
					<InputListItem label="Air Conditioner">
						<CheckBox id="idAc" selected="false"></CheckBox>
					</InputListItem>
					<InputListItem label="Snacks and Beverages">
						<CheckBox id="idSnacks" selected="false"></CheckBox>
					</InputListItem>
				</List>
			</VBox>
		</content>
		<beginButton>
			<Button text="{i18n>Save}" type="Accept" press="onSave"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Cancel}" type="Ghost" press="onInformation"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>